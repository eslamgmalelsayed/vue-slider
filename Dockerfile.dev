# Development Dockerfile for hot reloading
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Expose port for Vite dev server
EXPOSE 5173

# Start development server with Node.js compatibility flags
CMD ["node", "--no-deprecation", "./node_modules/.bin/vite", "--host", "0.0.0.0", "--port", "5173"]
